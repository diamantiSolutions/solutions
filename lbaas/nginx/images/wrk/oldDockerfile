#FROM alpine:latest
FROM centos:7

MAINTAINER arvind gupta <guptaarvindk@gmail.com>

RUN yum install -y build-essential libssl-dev curl

RUN yum  install build-essential libssl-dev make git -y

RUN git clone https://github.com/wg/wrk.git wrk
RUN (cd wrk && make)
# move the executable to somewhere in your PATH, ex:
RUN (mkdir /opt/wrk && cp wrk /opt/wrk)


# install github.com/wg/wrk v3.1.0
#RUN (mkdir /opt/wrk && cd /opt/wrk && curl -L# https://github.com/wg/wrk/archive/3.1.0.tar.gz | tar zx --strip 1 && make)

#RUN apt-get clean && apt-get -y remove build-essential curl && apt-get -y autoremove
RUN yum -y clean all
RUN rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

COPY start.sh /opt/wrk

# Set working directory.
WORKDIR /opt/wrk

# Define default command.
CMD ["/opt/wrk/start.sh"]
