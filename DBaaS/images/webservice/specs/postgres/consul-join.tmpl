apiVersion: batch/v1
kind: Job
metadata:
  name: <SVC_NAME>-consul-join
spec:
  activeDeadlineSeconds: 100
  template:
    metadata:
      name: <SVC_NAME>-consul-join
      annotations:
        diamanti.com/endpoint0: '{"network":"<NETWORK>","perfTier":"<NET_PERF_TIER>"}'
    spec:
      containers:
        - name: consul
          image: consul:0.8.1
          command:
            - "/bin/consul"
            - "join"
          env:
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
          args:<IP_ADDR_LIST>
      restartPolicy: Never
