{
    "apiVersion": "v1",
    "items":[
	{
	    "apiVersion": "v1",
	    "kind": "ReplicationController",
	    "metadata":{
		"name": "nodejs-pg-single-app"
	    },
	    "spec":{
		"replicas": 1,
		"selector":{
		    "app": "nodejs-pg-single-app"
		},
		"template":{
		    "metadata":{
			"name": "nodejs-pg-single-app",
			"annotations":{ 
			    "diamanti.com/endpoint0": "{\"network\":\"default\",\"perfTier\":\"high\"}"
			},
			"labels":{
			    "app": "nodejs-pg-single-app"
			}
		    },
		    "spec":{
			"hostNetwork": false,
			"containers": [
			    {
				"image": "guptaarvindk/simple-node-js-app:v1",
				"name": "nodejs-pg-single-app",
				"imagePullPolicy": "Always",
				"command": ["npm"], 
				"args": ["start"],
				"env": [
				    {
					"name": "PGHOST",
					"value": "pg-single"
				    }
				]
			    }
			]
		    }
		}
	    }
	}
    ],
    "kind": "List",
    "metadata": {}
}
