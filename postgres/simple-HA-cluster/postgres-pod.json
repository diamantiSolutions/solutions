{
    "apiVersion": "v1",
    "kind": "List",
    "metadata": {},
    "items": [
        {
            "apiVersion": "v1",
	    "kind": "ReplicationController",
	    "metadata":{
	    	"name": "pgha-<mode>"
	    },
	    "spec":{
		"replicas": 1,
  		"selector":{
		    "name": "pgha-<mode>"
		},
		"template":{
	            "metadata": {
			"annotations": {
			    "diamanti.com/endpoint0": "{\"network\":\"default\",\"perfTier\":\"high\"}"
			},
			"labels": {
			    "name": "pgha-<mode>"
			},
			"name": "pgha-<mode>"
		    },
		    "spec": {
			"containers": [
			    {
				"env": [
				    {
					"name": "PG_MASTER_HOST",
					"value": "pgha-master"
				    },
				    {
					"name": "PG_MASTER_SERVICE_NAME",
					"value": "pgha-master"
				    },
				    {
					"name": "PG_MASTER_PORT",
					"value": "5432"
				    },
				    {
					"name": "PG_MASTER_USER",
					"value": "master"
				    },
				    {
					"name": "PG_MODE",
					"value": "<mode>"
				    },
				    {
					"name": "PG_MASTER_PASSWORD",
					"value": "password"
				    },
				    {
					"name": "PG_USER",
					"value": "pgbench"
				    },
				    {
					"name": "PG_PASSWORD",
					"value": "password"
				    },
				    {
					"name": "PG_DATABASE",
					"value": "pgbench"
				    },
				    {
					"name": "PG_ROOT_PASSWORD",
					"value": "password"
				    },
				    {
					"name": "PGHOST",
					"value": "/tmp"
				    }
				],
				"image": "guptaarvindk/postgres-cluster:v1",
				"name": "postgres",
				"resources" : {
				    "requests" : {
					"cpu": "0m",
					"memory": "4Gi"
				    },
				    "limits" : {
					
					"memory": "4Gi"
				    }
				},
				"ports": [
				    {
					"containerPort": 5432,
					"protocol": "TCP"
				    }
				],
				"volumeMounts": [
				    {
					"mountPath": "/pgdata",
					"name": "volpgha-<mode>",
					"readOnly": false
				    }
				]
			    }
			],
                        "securityContext":{
                            "fsGroup": 26
                        },
			"volumes": [
			    {
				"flexVolume": {
				    "driver": "diamanti.com/volume",
				    "fsType": "xfs",
				    "options": {
					"name": "volpgha-<mode>",
					"perfTier": "high",
					"type":"Simple"
				    }
				},
				"name": "volpgha-<mode>"
			    }
			]
		    }
		}
	    }
	},
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "labels": {

		    "name": "pgha-<mode>"
                },
                "name": "pgha-<mode>"
            },
            "spec": {
                "clusterIP": "None",
                "ports": [
                    {
                        "nodePort": 0,
                        "port": 5432,
                        "protocol": "TCP",
                        "targetPort": 5432
                    }
                ],
                "selector": {
                    "name": "pgha-<mode>"
                },
                "sessionAffinity": "None",
                "type": "ClusterIP"
            }
        }
    ]
}
