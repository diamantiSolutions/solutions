{
    "apiVersion": "v1",
    "items": [
	{
	    "apiVersion": "v1",
	    "kind": "ReplicationController",
	    "metadata":{
	    	"name": "pgpool"
	    },
	    "spec":{
		"replicas": 1,
  		"selector":{
		    "name": "pgpool"
		},
		"template":{
		    "metadata": {
			"annotations": {
			    "diamanti.com/endpoint0": "{\"network\":\"default\",\"perfTier\":\"high\"}"
			},
			"name": "pgpool",
			"labels": {
		    "name": "pgpool"
			}
		    },
		    "spec": {
			"containers": [{
			    "name": "pgpool",
			    "imagePullPolicy": "Always",
			    "image": "guptaarvindk/pgpool:v2",
			    "ports": [{
				"containerPort": 5432,
				"protocol": "TCP"
			    }],
			    "env": [{
				"name": "PG_USERNAME",
				"value": "pgbench"
			    }, {
				"name": "PG_PASSWORD",
				"value": "password"
			    }, {
				"name": "PG_MASTER_SERVICE_NAME",
				"value": "pgmaster"
			    }, {
				"name": "PG_READ_SERVICE_NAME",
				"value": "pgslave"
			    }],
			    "volumeMounts": []
			}],
			"volumes": []
		    }
		}
	    }
	},
	
	
	{
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
		"name": "pgpool",
		"labels": {
                    "name": "pgpool"
		}
            },
            "spec": {
                "clusterIP": "None",
		"ports": [{
                    "protocol": "TCP",
                    "port": 5432,
                    "targetPort": 5432,
                    "nodePort": 0
            }],
		"selector": {
                    "name": "pgpool"
		},
		"sessionAffinity": "None"
            }
	}
    ],
    "kind": "List",
    "metadata": {}
}

	
