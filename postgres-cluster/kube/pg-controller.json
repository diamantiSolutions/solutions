{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pg-controller",
        "labels": {
            "name": "pg-controller"
        }
    },
    "spec": {
        "containers": [{
            "name": "pg-controller",
	    "image": "pg-controller:v1",
	    "imagePullPolicy": "Never",
            "env": [{
                "name": "PGHOST",
                "value": "pg-0"
            }, {
                "name": "SLEEP_TIME",
                "value": "20"
            }, {
		"name": "KUBERNETES_CLUSTER_DOMAIN",
                "value": "captains.datawise.io"
	    }, {
		"name": "KUBERNETES_SERVICE_HOST",
                "value": "172.16.17.3"
	    }, {
		"name": "KUBERNETES_SERVICE_PORT",
                "value": "8080"
	    }, {
		"name": "KUBE_NAMESPACE",
		"value": "default"
	    }, {
                "name": "MASTER_LABEL",
                "value": "name=pg-master"
            }]
        }],
        "nodeSelector": {
            "node": "node0"
        }
    }
    
}
