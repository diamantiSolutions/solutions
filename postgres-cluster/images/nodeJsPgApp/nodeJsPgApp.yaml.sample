apiVersion: v1
kind: Pod
metadata:
  name: nodejs-app
  annotations: 
    diamanti.com/endpoint0: "{\"network\":\"default\",\"perfTier\":\"high\"}"
  labels:
    app: nodejs-pg-app
spec:
  hostNetwork: false
  restartPolicy: Never
  containers:
  - image: guptaarvindk/simple-node-js-app:v1
    name: arvind-nodejs
    imagePullPolicy: IfNotPresent
    command: [npm] 
    args: [start]
    env:
    - name: PGHOST
      value: "pgpool"